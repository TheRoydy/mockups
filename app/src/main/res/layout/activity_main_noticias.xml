<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B4F72"
    tools:context=".MainNoticias">

    <Button
        android:id="@+id/btn_salir"
        android:layout_width="63dp"
        android:layout_height="49dp"
        android:backgroundTint="#0C0C0C"
        android:drawableTint="#0C0C0C"
        android:foregroundTint="#101010"
        android:onClick="btn_salir"
        android:textColorLink="#050505"
        android:translationY="-20dp"
        app:icon="@drawable/action_undo_svgrepo_com"
        app:iconGravity="top"
        app:iconSize="35dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067" />

    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="326dp"
        android:backgroundTint="#ffffff"
        android:translationY="405dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="368dp"
            android:layout_height="245dp"
            android:translationX="12dp"
            android:translationY="10dp"
            app:srcCompat="@mipmap/xbox_pass" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Xbox Game Pass a mitad de precio"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:translationX="10dp"
            android:translationY="260dp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="36dp"
            android:layout_height="28dp"
            android:translationX="300dp"
            android:translationY="290dp"
            app:srcCompat="@drawable/share_svgrepo_com__1_" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="36dp"
            android:layout_height="28dp"
            android:translationX="260dp"
            android:translationY="290dp"
            app:srcCompat="@drawable/heart_svgrepo_com" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="36dp"
            android:layout_height="28dp"
            android:translationX="340dp"
            android:translationY="290dp"
            app:srcCompat="@drawable/more" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:backgroundTint="#FFFFFF"
            android:text="Xbox  • 3d"
            android:textColor="#000000"
            android:translationX="-10dp"
            android:translationY="290dp"
            app:icon="@drawable/web"
            app:iconSize="20dp"
            app:iconTint="#090808" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Noticias"
        android:textColor="#EFEAEA"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.831"
        app:layout_constraintStart_toEndOf="@+id/btn_salir"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="326dp"
        android:backgroundTint="#ffffff"
        android:translationY="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="368dp"
            android:layout_height="245dp"
            android:translationX="12dp"
            android:translationY="10dp"
            app:srcCompat="@mipmap/sena" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Convenios internacionales del Sena"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:translationX="10dp"
            android:translationY="260dp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="36dp"
            android:layout_height="28dp"
            android:translationX="300dp"
            android:translationY="290dp"
            app:srcCompat="@drawable/share_svgrepo_com__1_" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="36dp"
            android:layout_height="28dp"
            android:translationX="260dp"
            android:translationY="290dp"
            app:srcCompat="@drawable/heart_svgrepo_com" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="36dp"
            android:layout_height="28dp"
            android:translationX="340dp"
            android:translationY="290dp"
            app:srcCompat="@drawable/more" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:backgroundTint="#FFFFFF"
            android:text="Sena  • 1d"
            android:textColor="#000000"
            android:translationX="-10dp"
            android:translationY="290dp"
            app:icon="@drawable/web"
            app:iconSize="20dp"
            app:iconTint="#090808" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>