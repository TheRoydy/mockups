<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B4F72"
    android:backgroundTint="#1B4F72"
    android:foregroundTint="#1B4F72"
    tools:context=".MainMiApp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="196dp"
        android:layout_height="47dp"
        android:fontFamily="sans-serif-black"
        android:text="TechRoydy"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="63dp"
        android:layout_height="49dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.295"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069"
        app:srcCompat="@drawable/account_avatar_profile_user_8_svgrepo_com" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="383dp"
        android:layout_height="214dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.067"
        app:srcCompat="@mipmap/xbox" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="208dp"
        android:layout_height="46dp"
        android:text="Noticias."
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.085" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo Lanzamiento de Xbox"
        android:textAlignment="textEnd"
        android:textColor="#FAFAFA"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.551" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="341dp"
        android:layout_height="331dp"
        android:text="¡Microsoft ha lanzado una nueva versión de su popular consola de videojuegos, Xbox Series X! Este último modelo ofrece un rendimiento mejorado con un procesador más potente, gráficos de última generación y tiempos de carga ultrarrápidos gracias a su SSD personalizado. Además, incorpora tecnologías avanzadas como trazado de rayos en tiempo real y compatibilidad con resolución 8K, llevando la experiencia de juego a un nivel completamente nuevo. "
        android:textColor="#F4F2F2"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.529" />

    <Button
        android:id="@+id/btn_salir"
        android:layout_width="63dp"
        android:layout_height="49dp"
        android:backgroundTint="#0C0C0C"
        android:drawableTint="#0C0C0C"
        android:foregroundTint="#101010"
        android:onClick="btn_salir"
        android:textColorLink="#050505"
        app:icon="@drawable/action_undo_svgrepo_com"
        app:iconGravity="top"
        app:iconSize="35dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067" />


</androidx.constraintlayout.widget.ConstraintLayout>